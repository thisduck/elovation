<div class="hero-unit">
  <h1><%= @player.name %></h1>
  <div><%= image_tag(gravatar_url(@player, :size => 80)) %></div>
  <% if can?(:toggle_admin, @player) %>
    <br/>
    <span><%= link_to "#{@player.admin? ? 'Remove' : 'Set'} admin", toggle_admin_player_path(@player), method: :post, class: "btn btn-primary" %></span>
  <% end %>
</div>

<div class="row-fluid">
  <div class="span6">
    <h2>Recent Results</h2>
    <% if @player.recent_results.any? %>
      <ul>
        <%= render :partial => 'result', :collection => @player.recent_results %>
      </ul>
    <% else %>
      <span>No results, play some games!</span>
    <% end %>
  </div>
  <div class="span6">
    <h2>Ratings</h2>
    <ol>
      <%= render :partial => 'rating', :collection => @player.ratings %>
    </ol>
  </div>
</div>
