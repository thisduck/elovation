<li>
  <%= result.created_at.to_s(:short) %>
  -
  <%= image_tag(gravatar_url(result.winner, :size => 24)) %>
  <strong><%= result.winner.name %></strong>
  beat
  <%= image_tag(gravatar_url(result.loser, :size => 24)) %>
  <strong><%= result.loser.name %></strong>
  in
  <strong><%= result.league.name %></strong>
  <% if result.most_recent? and can?(:destroy, Result) -%>
    <%= link_to "Delete", league_result_path(result.league, result), :class => "btn btn-danger", :method => :delete, :confirm => "Are you sure?" %>
  <% end -%>
</li>
